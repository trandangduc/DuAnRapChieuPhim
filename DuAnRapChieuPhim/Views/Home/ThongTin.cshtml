@model DuAnRapChieuPhim.Models.ThongTinCaNhan

@{
    ViewBag.Title = "Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    .card-header {
        background-color: #000; /* Màu đen cho background */
        color: #fff; /* Màu trắng cho chữ trên header */
        font-weight: bold; /* In đậm chữ */
    }

    .card {
        background-color: #000; /* Màu đen cho card */
        color: #fff; /* Màu trắng cho nội dung card */
    }

    .btn1-edit {
        background-color: #007bff; /* Màu xanh dương cho nút chỉnh sửa */
        color: #fff; /* Màu trắng cho chữ trên nút */
    }

    .btn-edit:hover {
        background-color: #0056b3; /* Màu xanh dương sáng khi di chuột qua */
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0 text-center" style="font-weight:bold">Thông Tin Cá Nhân</h2>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Họ và Tên:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.Ten" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Số Điện Thoại:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.SDT" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Email:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.Email" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Thông Tin Chi Tiêu:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.ThongTinChiTieu" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Cấp Độ Thẻ:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.CapDoThe" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label">Mã Thẻ:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.MaThe" readonly>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a href="@Url.Action("EditTT", new { id = Model.MaKH })" class="btn btn-custom custom-button" style="width: 90px; color: black">Chỉnh Sửa</a>
   
</div>



